---
import { defaultLang } from '../i18n/ui';

// Redirect to default language page
Astro.response.status = 301;
Astro.response.headers.set('Location', `/${defaultLang}/about`);
---

<Layout title="About - DevBlog">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-4xl font-serif font-bold mb-8">About Me</h1>
    
    <div class="bg-white rounded-lg shadow-sm p-8 mb-12">
      <div class="flex flex-col md:flex-row gap-8 items-start">
        <img 
          src="https://via.placeholder.com/200" 
          alt="Profile" 
          class="rounded-lg w-48 h-48 object-cover"
        />
        <div>
          <h2 class="text-2xl font-bold mb-4">John Doe</h2>
          <p class="text-gray-600 mb-4">
            I'm a software developer with over 5 years of experience in web development. 
            I'm passionate about creating efficient, scalable solutions and sharing knowledge 
            with the developer community.
          </p>
          <div class="flex gap-4">
            <a 
              href="https://twitter.com" 
              class="text-primary-600 hover:text-primary-700"
              target="_blank"
              rel="noopener noreferrer"
            >
              Twitter
            </a>
            <a 
              href="https://github.com" 
              class="text-primary-600 hover:text-primary-700"
              target="_blank"
              rel="noopener noreferrer"
            >
              GitHub
            </a>
            <a 
              href="https://linkedin.com" 
              class="text-primary-600 hover:text-primary-700"
              target="_blank"
              rel="noopener noreferrer"
            >
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </div>

    <section class="space-y-8">
      <div>
        <h2 class="text-2xl font-serif font-bold mb-4">Skills & Expertise</h2>
        <div class="bg-white rounded-lg shadow-sm p-6">
          <ul class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-primary-500 rounded-full"></span>
              JavaScript/TypeScript
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-primary-500 rounded-full"></span>
              React.js
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-primary-500 rounded-full"></span>
              Node.js
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-primary-500 rounded-full"></span>
              Python
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-primary-500 rounded-full"></span>
              AWS
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-primary-500 rounded-full"></span>
              Docker
            </li>
          </ul>
        </div>
      </div>

      <div>
        <h2 class="text-2xl font-serif font-bold mb-4">Work Experience</h2>
        <div class="bg-white rounded-lg shadow-sm p-6 space-y-6">
          <div>
            <h3 class="font-bold">Senior Developer @ Tech Corp</h3>
            <p class="text-gray-600">2020 - Present</p>
            <p class="mt-2">Leading development of enterprise web applications and mentoring junior developers.</p>
          </div>
          <div>
            <h3 class="font-bold">Full Stack Developer @ StartupX</h3>
            <p class="text-gray-600">2018 - 2020</p>
            <p class="mt-2">Developed and maintained multiple client projects using modern web technologies.</p>
          </div>
        </div>
      </div>

      <div>
        <h2 class="text-2xl font-serif font-bold mb-4">Get in Touch</h2>
        <div class="bg-white rounded-lg shadow-sm p-6">
          <p class="mb-4">
            I'm always interested in hearing about new projects and opportunities. 
            Feel free to reach out if you'd like to collaborate or just chat about technology.
          </p>
          <a 
            href="mailto:contact@example.com" 
            class="inline-block bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition-colors duration-200"
          >
            Send me an email
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>
