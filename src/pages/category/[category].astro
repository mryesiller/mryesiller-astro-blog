---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  return [
    { params: { category: 'dev' }, props: { title: 'Developer Blogs', description: 'Deep dives into software development, coding tutorials, and best practices' } },
    { params: { category: 'ai' }, props: { title: 'AI & Machine Learning', description: 'Exploring the latest in artificial intelligence and machine learning' } },
    { params: { category: 'daily' }, props: { title: 'Daily Tech Life', description: 'Day-to-day experiences, tips, and stories from the tech world' } },
  ];
}

const { category } = Astro.params;
const { title, description } = Astro.props;

const allPosts = await getCollection('blog');
const posts = allPosts.filter(post => post.data.category === category);
---

<Layout title={title}>
  <div class="max-w-4xl mx-auto">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-serif font-bold mb-4">{title}</h1>
      <p class="text-xl text-gray-600">{description}</p>
    </header>

    <div class="grid gap-8">
      {posts.map(post => (
        <article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200">
          <div class="p-8">
            <div class="text-sm text-primary-600 mb-2">{post.data.category.toUpperCase()}</div>
            <h2 class="text-2xl font-bold mb-4">
              <a 
                href={`/blog/${post.slug}`}
                class="text-gray-900 hover:text-primary-600 transition-colors duration-200"
              >
                {post.data.title}
              </a>
            </h2>
            <p class="text-gray-600 mb-6">{post.data.description}</p>
            <div class="flex justify-between items-center text-sm">
              <span class="text-gray-500">{post.data.author}</span>
              <time datetime={post.data.pubDate.toISOString()} class="text-gray-500">
                {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>
